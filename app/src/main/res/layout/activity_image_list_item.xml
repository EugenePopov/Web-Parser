<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="paiip.webcrawler.ImageListItemActivity"
    android:background="@android:color/darker_gray">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200sp"
        android:layout_height="270sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imageDescription"
        android:id="@+id/imageDescriptionLabel"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_below="@id/imageView"
        android:textColor="#010000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imageDescription"
        android:id="@+id/imageDescription"
        android:textSize="10sp"
        android:layout_alignTop="@+id/imageDescriptionLabel"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:textColor="#010000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imageNotes"
        android:id="@+id/imageNotesLabel"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_below="@+id/imageDescription"
        android:textColor="#010000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imageNotes"
        android:id="@+id/imageNotes"
        android:textSize="10sp"
        android:layout_below="@+id/imageDescription"
        android:layout_alignLeft="@+id/imageDescription"
        android:layout_alignStart="@+id/imageView"
        android:textColor="#010000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imageBlogSource"
        android:id="@+id/imageBlogSourceLabel"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_below="@+id/imageNotes"
        android:textColor="#010000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imageBlogSource"
        android:id="@+id/imageBlogSource"
        android:textSize="10sp"
        android:autoLink="web"
        android:layout_below="@+id/imageNotes"
        android:layout_alignLeft="@+id/imageNotes"
        android:layout_alignStart="@+id/imageView"
        android:textIsSelectable="true"
        android:textColorHighlight="#010101"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:onClick="onClickSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/button2"
        android:layout_alignParentEnd="true"
        android:onClick="onClickShareContent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />


</RelativeLayout>


